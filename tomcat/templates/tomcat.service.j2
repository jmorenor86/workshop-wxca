[Unit]
Description=Apache Tomcat Web Application Container
After=syslog.target network.target

[Service]
Type=forking

Environment=JAVA_HOME=/usr/lib/jvm/java-1.11.0-openjdk-amd64
Environment=CATALINA_PID=/opt/tomcat/apache-tomcat-10.0.0/temp/tomcat.pid
Environment=CATALINA_HOME=/opt/tomcat/apache-tomcat-10.0.0
Environment=CATALINA_BASE=/opt/tomcat/apache-tomcat-10.0.0
Environment='JAVA_OPTS=-Djava.awt.headless=true -Djava.security.egd=file:/dev/./urandom -Djava.net.preferIPv4Stack=true -Dfile.encoding=UTF8'

ExecStart=/opt/tomcat/apache-tomcat-10.0.0/bin/startup.sh
ExecStop=/opt/tomcat/apache-tomcat-10.0.0//bin/shutdown.sh

User=tomcat
Group=tomcat

[Install]
WantedBy=multi-user.target
